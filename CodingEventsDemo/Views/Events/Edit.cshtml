@{
    ViewBag.Title = "Edit Event @ViewBag.eventToEdit.Name (id=@ViewBag.eventToEdit.Id)";
}

<h1>Edit Event</h1>

<form method="post" action="/events/edit">
    <div class="form-group">
        <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.eventToEdit.Name" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" value="@ViewBag.eventToEdit.Description" />
    </div>
    <input type="submit" value="Save Changes" />
</form>
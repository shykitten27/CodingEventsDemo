@model CodingEventsDemo.ViewModels.AddEventViewModel;

<h1>Add Event</h1>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span class="field-validation-error" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span class="field-validation-error" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span class="field-validation-error" asp-validation-for="Location"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumOfAttendees">Number of Attendees</label>
        <input asp-for="NumOfAttendees" />
        <span class="field-validation-error" asp-validation-for="NumOfAttendees"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
        <span class="field-validation-error" asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsTrue">Must register?</label>
        <input type="checkbox" value="true" asp-for="IsTrue" />
        <label for="true">true</label>
@*        <input type="radio" value="false" asp-for="IsTrue" />
        <label for="false">false</label><br>*@
        <span class="field-validation-error" asp-validation-for="IsTrue"></span>
    </div>
    <input type="submit" value="Add Event" />
</form>
